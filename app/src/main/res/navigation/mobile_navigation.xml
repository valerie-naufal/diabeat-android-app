<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.diabeatapp.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_logs"
        android:name="com.example.diabeatapp.ui.logs.LogsFragment"
        android:label="@string/title_logs"
        tools:layout="@layout/fragment_logs" />

    <fragment
        android:id="@+id/navigation_add_logs"
        android:name="com.example.diabeatapp.ui.addlogs.AddLogsFragment"
        android:label="@string/title_add_logs"
        tools:layout="@layout/fragment_add_logs" />

    <fragment
        android:id="@+id/navigation_consumption"
        android:name="com.example.diabeatapp.ui.consumption.ConsumptionFragment"
        android:label="@string/title_consumption"
        tools:layout="@layout/fragment_consumption" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.diabeatapp.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>